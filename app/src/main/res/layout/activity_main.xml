<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="12dp">
            <Button
                android:id="@+id/btn_main_activity"
                style="@style/Theme.AndroidFundamental.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_input_event"/>
            <Button
                android:id="@+id/btn_main_fragment"
                style="@style/Theme.AndroidFundamental.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fragment"/>
            <Button
                android:id="@+id/btn_main_listview"
                style="@style/Theme.AndroidFundamental.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/list_view"/>
            <Button
                android:id="@+id/btn_main_nav"
                style="@style/Theme.AndroidFundamental.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/navigation"/>
            <Button
                android:id="@+id/btn_main_service"
                style="@style/Theme.AndroidFundamental.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/service"/>
            <Button
                android:id="@+id/btn_main_broadcast"
                style="@style/Theme.AndroidFundamental.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/broadcast_receiver"/>
            <Button
                android:id="@+id/btn_main_alarm"
                style="@style/Theme.AndroidFundamental.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alarm"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>