<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidFundamental" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.AndroidFundamental.Button">
        <item name="android:layout_marginVertical" tools:targetApi="o">2dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/teal_700</item>
    </style>
    <style name="Theme.AndroidFundamental.SmsReceiver" parent="Theme.MaterialComponents.DayNight.Dialog"/>
</resources>