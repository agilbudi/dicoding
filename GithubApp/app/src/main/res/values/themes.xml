<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#7B05B6</item>
        <item name="colorSecondaryVariant">#F1F1F1</item>
        <item name="colorOnSecondary">@color/magenta</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/courier_std</item>
    </style>

    <style name="Theme.GithubApp.ItemMiniText" parent="Theme.GithubApp">
        <item name="android:textSize">11sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="Theme.GithubApp.ItemMiniText.value" parent="Theme.GithubApp.ItemMiniText">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>

    <style name="Theme.GithubApp.Detail.Header" parent="Theme.GithubApp">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
</resources>