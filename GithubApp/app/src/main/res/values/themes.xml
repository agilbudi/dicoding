<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GithubApp.ItemMiniText" parent="Theme.GithubApp">
        <item name="android:textSize">11sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textColor">#221F1F</item>
    </style>
    <style name="Theme.GithubApp.ItemMiniText.value" parent="Theme.GithubApp.ItemMiniText">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>
    <style name="Theme.GithubApp.Detail" parent="Theme.GithubApp">
        <item name="android:layout_marginTop">@dimen/medium_width</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Theme.GithubApp.Detail.Header" parent="Theme.GithubApp">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
</resources>